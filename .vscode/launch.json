    "version": "0.2.0",
    "configurations": [
	
		{
			"name": "(lldb) Запустить",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/push_swap",
			"args": ["2", "1", "3"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [ { "name": "squid", "value": "clam" } ],
			"externalConsole": true,
			"MIMode": "lldb"
		},
		{
			"name": "(lldb) Подключить",
			"type": "cppdbg",
			"request": "attach",
			"program": "${workspaceFolder}/push_swap",
			"processId": "${command:pickProcess}",
			"MIMode": "lldb"
		}
    ]
}